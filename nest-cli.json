{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/api-gateway/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/api-gateway/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/api-gateway",
  "projects": {
    "api-gateway": {
      "type": "application",
      "root": "apps/api-gateway",
      "entryFile": "main",
      "sourceRoot": "apps/api-gateway/src",
      "compilerOptions": {
        "tsConfigPath": "apps/api-gateway/tsconfig.app.json"
      }
    },
    "auth-microservice": {
      "type": "application",
      "root": "apps/auth-microservice",
      "entryFile": "main",
      "sourceRoot": "apps/auth-microservice/src",
      "compilerOptions": {
        "tsConfigPath": "apps/auth-microservice/tsconfig.app.json"
      }
    },
    "chat-microservice": {
      "type": "application",
      "root": "apps/chat-microservice",
      "entryFile": "main",
      "sourceRoot": "apps/chat-microservice/src",
      "compilerOptions": {
        "tsConfigPath": "apps/chat-microservice/tsconfig.app.json"
      }
    },
    "post-microservice": {
      "type": "application",
      "root": "apps/post-microservice",
      "entryFile": "main",
      "sourceRoot": "apps/post-microservice/src",
      "compilerOptions": {
        "tsConfigPath": "apps/post-microservice/tsconfig.app.json"
      }
    },
    "user-microservice": {
      "type": "application",
      "root": "apps/user-microservice",
      "entryFile": "main",
      "sourceRoot": "apps/user-microservice/src",
      "compilerOptions": {
        "tsConfigPath": "apps/user-microservice/tsconfig.app.json"
      }
    }
  }
}